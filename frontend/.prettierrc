{
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "useTabs": false,
    "htmlWhitespaceSensitivity": "ignore",
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "angular"
            }
        }
    ]
}
